{
    "name": "<%= config[:title] %>",
    "description": "<%= config[:desc] %>",
    "version": "<%= config[:version] %>",
    <%= config[:chrome_update_tag] %>
    "manifest_version": 2,
    "content_scripts": [{
        "css": [ ],
        "js": [ "loadAll.js" ],
        "matches": [ "*://*.playdominion.com/Dominion/gameClient.html*" ],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "<%= config[:jslib].join("\",\n        \"") %>",
        "<%= config[:js].join("\",\n        \"") %>",
        "<%= config[:css].join("\",\n        \"") %>",
        "<%= config[:img].join("\",\n        \"") %>"
    ],
    "icons": {
        "16": "images/<%= config[:icon16] %>",
        "48": "images/<%= config[:icon48] %>",
        "128": "images/<%= config[:icon128] %>"
    }
}
